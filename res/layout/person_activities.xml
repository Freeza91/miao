<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:id="@+id/settings_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/settings_picture_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center"
                />
            
           <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="照片"
                android:gravity="center"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/settings_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/settings_topic_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center"
                />
            
           <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="帖子"
                android:gravity="center"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/settings_followers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/settings_followers_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center"
                />
            
           <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="关注"
                android:gravity="center"
                />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/settings_fans" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/settings_fans_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11"
                android:gravity="center"
                />
            
           <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="粉丝"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    
    <View 
       android:id="@+id/settings_divider"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#FF0000"/> 
       
</LinearLayout>
